@using IdentityServer4.Extensions

@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<div class="nav-page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

        <a href="~/" class="navbar-brand">
            <img src="~/icon.png" class="icon-banner">
            IdentityServer4
        </a>

        @if (!string.IsNullOrWhiteSpace(name))
        {
            <ul class="navbar-nav mr-auto">
                <li class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" id="userDropdown" type"button" data-bs-toggle="dropdown" aria-expanded="false">@name <b class="caret"></b></button>

                    <ul class="dropdown-menu" aria-labelledby="userDropdown">
                        <li><button class="dropdown-item" type="button" asp-action="Logout" asp-controller="Account">Logout</button></li>
                    </ul>
              </li>
            </ul>
        }
    
    </nav>
</div>
