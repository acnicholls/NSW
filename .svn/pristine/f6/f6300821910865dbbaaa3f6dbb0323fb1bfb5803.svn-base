<%@ Page Title="Mikechi.com" Language="C#" MasterPageFile="~/Site.Master" AutoEventWireup="true" CodeBehind="ViewPost.aspx.cs" Inherits="NSW.Posts.ViewPost" %>
<asp:Content ID="Content1" ContentPlaceHolderID="HeadContent" runat="server">
    <link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.css" />
 <script type="text/javascript" src="http://cdn.leafletjs.com/leaflet-0.7.3/leaflet.js"></script>
</asp:Content>
<asp:Content ID="Content2" ContentPlaceHolderID="MainContent" runat="server">
    <div class="item">
    <% if ( MobileDevice ) {%>
        <table class="itemInfo">
            <tr>
                <td>
                    <asp:Label ID="vpItemTitle" runat="server" CssClass="itemTitle" />
                </td>
            </tr>
            <tr>
                <td class="itemPrice">
                    <asp:Label ID="vpItemPrice" runat="server" CssClass="itemPrice" />
                </td>
            </tr>
            <tr>
                <td class="picCell">
                    <asp:Image ID="vpItemPic" runat="server" CssClass="itemPic" />
                </td>
            </tr>
            <tr>
                <td class="thumbCell">
                    <asp:ImageButton ID="vpItemThumb1" runat="server" CssClass="itemThumb" 
                        onclick="vpItemThumb1_Click"/>
                    <asp:ImageButton ID="vpItemThumb2" runat="server" CssClass="itemThumb" 
                        onclick="vpItemThumb2_Click"/>
                    <asp:ImageButton ID="vpItemThumb3" runat="server" CssClass="itemThumb" 
                        onclick="vpItemThumb3_Click"/>
                    <asp:ImageButton ID="vpItemThumb4" runat="server" CssClass="itemThumb" 
                        onclick="vpItemThumb4_Click"/>
                </td>
            </tr>
            <tr>
                <td >
                    <p>
                    <asp:Label ID="vpDescription" runat="server" CssClass="itemDesc" />
                    </p>
                </td>
            </tr>
            <tr>
                <td class="mapCell">
                    <div id="map"></div>
                </td>
            </tr>
            <tr>
                <td class="userInfo">
                    <br />
                    <asp:Label ID="vpUserPhone" runat="server" CssClass="userContactPhone" />
                    <br />
                    <br />
                    <asp:Button ID="vpUserContact" runat="server" CssClass="userContactButton" 
                        onclick="vpUserContact_Click" />
                    <br />
                    <br />
                    <asp:Button ID="vpUserItems" runat="server" CssClass="userItemsButton" 
                        onclick="vpUserItems_Click" />
                        <br />
                        <br />
                    <asp:Button ID="vpUserEdit" runat="server" CssClass="userEditButton" 
                        onclick="vpUserEdit_Click" />
                </td>
            </tr>
        </table>
        <%} else {%>
        <table class="itemInfo">
            <tr>
                <td>
                    <asp:Label ID="Label1" runat="server" CssClass="itemTitle" />
                </td>
                <td class="itemPrice">
                    <asp:Label ID="Label2" runat="server" CssClass="itemPrice" />
                </td>
            </tr>
            <tr>
                <td colspan="2" class="picCell">
                    <asp:Image ID="Image1" runat="server" CssClass="itemPic" />
                </td>
            </tr>
            <tr>
                <td colspan="2" class="thumbCell">
                    <asp:ImageButton ID="ImageButton1" runat="server" CssClass="itemThumb" 
                        onclick="vpItemThumb1_Click"/>
                    <asp:ImageButton ID="ImageButton2" runat="server" CssClass="itemThumb" 
                        onclick="vpItemThumb2_Click"/>
                    <asp:ImageButton ID="ImageButton3" runat="server" CssClass="itemThumb" 
                        onclick="vpItemThumb3_Click"/>
                    <asp:ImageButton ID="ImageButton4" runat="server" CssClass="itemThumb" 
                        onclick="vpItemThumb4_Click"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <br />
                    <p>
                    <asp:Label ID="Label3" runat="server" CssClass="itemDesc" />
                    </p>
                    <br />
                </td>
            </tr>
            <tr>
                <td class="mapCell">
                    <div id="Div1"></div>
                </td>
                <td class="userInfo">
                    <br />
                    <asp:Label ID="Label4" runat="server" CssClass="userContactPhone" />
                    <br />
                    <br />
                    <asp:Button ID="Button1" runat="server" CssClass="userContactButton" 
                        onclick="vpUserContact_Click" />
                    <br />
                    <br />
                    <asp:Button ID="Button2" runat="server" CssClass="userItemsButton" 
                        onclick="vpUserItems_Click" />
                        <br />
                        <br />
                    <asp:Button ID="Button3" runat="server" CssClass="userEditButton" 
                        onclick="vpUserEdit_Click" />
                </td>
            </tr>
        </table>
        <%} %>
    </div>
 <%= LoadMap() %>
</asp:Content>
